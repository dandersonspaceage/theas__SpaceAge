<html>
    <head>
        <meta charset="utf-8">
        <title>PrimeVue Demo</title>

        <link type="text/css" rel="stylesheet" href="{{ '/cdn/primevue/resources/themes/lara-light-indigo/theme.css'|theasResource }}">
        <link type="text/css" rel="stylesheet" href="{{ '/cdn/primevue/resources/primevue.min.css'|theasResource }}">
        <link type="text/css" rel="stylesheet" href="{{ '/cdn/primeicons/primeicons.css'|theasResource }}">

        <script src="{{ '/cdn/vue3/vue.global.js'|theasResource }}"></script>
        <script src="{{ '/cdn/primevue/core/core.min.js'|theasResource }}"></script>
        <script src="{{ '/cdn/primevue/slider/slider.min.js'|theasResource }}"></script>         
        
    </head>

    <body>
        <div id="app">
            <p-slider v-model="val"></p-slider>
            <h6>[[val]]</h6>
        </div>

        <script>
            const {createApp, ref} = Vue;

            const App = {
                setup() {
                    const val = ref(null);

                    return {
                        val
                    };
                },
                components: {
                    'p-slider': primevue.slider
                }
            };

            let cfg = primevue.config.default;
            cfg.compilerOptions.delimeters = ["[[", "]]"];

            createApp(App).use(cfg).mount("#app");
        </script>
    </body>
</html>